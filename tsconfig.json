{
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "dist",
        "strict": true,
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "types": ["node", "jest", "chrome"],
    },
    "include": [
        "**/*.d.ts",
        "src/**/*.ts"
    ],
    "exclude": [
        "dist/**/*",
        "gulpfile.js"
    ],
    "watchOptions": {
        "watchFile": "DynamicPriorityPolling",
        "watchDirectory": "DynamicPriorityPolling"
    }
}