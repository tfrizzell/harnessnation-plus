{
    "compilerOptions": {
        "rootDir": "./src",
        "outDir": "./dist",
        "strict": true,
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "types": ["node", "jest", "chrome"],
    },
    "include": [
        "./src/**/*.ts",
        "**/*.d.ts",
    ],
    "exclude": [
        "__tests__/**/*",
        "dist/**/*",
        "gulpfile.js"
    ]
}